{% extends 'DWSBundle::layout.html.twig' %}

{% block body %}
    {{ parent() }}
    {% if text is defined %}
	    <div class="alert alert-success alert-dismissible" role="alert">
	  		<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	  		<strong>Sucess!</strong> {{ text }}
		</div>    	
	{% endif %}
	<div class="container">
		<div class="col-md-12">
			<div class="page-header margin-none">
				<h2 class="padding-none">Categories</h2>
			</div>
			<div class="table-responsive">
				<table class="table table-striped table-hover">
					<thead>
						<tr>
							<th>Id</th>
                            <th>Name</th>                            
						</tr>
					</thead>
					<tbody>
						{% for category in categories %}
                            <tr>
								<td> {{ category.id }} </td> 
	                            <td> {{ category.name }} </td> 
	                           
                                <td class="actions">
                                	<a href="{{ path('pro_list_bycat', {'category': category.name}) }}" class="btn btn-sm btn-success">
			                            list products
			                        </a>			
			                        <a href="{{ path('cat_show', {'id': category.id}) }}" class="btn btn-sm btn-info">
			                            details
			                        </a>
			                        {#
			                        <a href="{{ path('cat_edit', {'id': category.id}) }}" class="btn btn-sm btn-primary">
			                            edit
			                        </a>
			                        #}
			                        <a href="{{ path('cat_delete', {'id': category.id}) }}" class="btn btn-sm btn-danger btn-delete">
			                            delete
			                        </a>
				                </td>
                            </tr>
                         {% endfor %}
					</tbody>
				</table>
			</div>
		</div>
		{#
		<div class="row">
			<div class="text-center"> 
					<a href="{{ path('cat_create_def') }}"><button class="btn btn-primary btn-lg">Create default</button></a>
			</div>
		</div>
		#}
	</div>
{% endblock %}