{% extends 'DWSBundle::layout.html.twig' %}

{% block body %}
    {{ parent() }}
    {% if text is defined %}
	    <div class="alert alert-success alert-dismissible" role="alert">
	  		<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	  		<strong>Sucess!</strong> {{ text }}
		</div>    	
	{% endif %}
	<div class="main container">
		<div class="row well">
			<div class="col-md-6">
				<div class="page-header">
					<h2>Product {{product.name}} (id: {{product.id}})</h2>
				</div>
                {{ form_start(form, { 'attr' : {'novalidate': 'novalidate', 'role' : 'form'} }) }}
                <fieldset>
                <div class="form-group">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name, { 'attr' : {'class' : 'form-control', 'placeholder' : product.name } }) }}
                    <span class="text-danger">{{ form_errors(form.name) }}</span>
                </div>
                
                <div class="form-group">
			        {{ form_label(form.category) }}
			        {{ form_widget(form.category, {'attr': {'class': 'form-control'}}) }}
			        <span class="text-danger">{{ form_errors(form.category) }}</span>
			    </div>

			    <div class="form-group">
			        {{ form_label(form.price) }}
			        {{ form_widget(form.price, {'attr': {'class': 'form-control', 'placeholder' : product.price }}) }}
			        <span class="text-danger">{{ form_errors(form.price) }}</span>
			    </div>
			    
			    <div class="form-group">
			        {{ form_label(form.description) }}
			        {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder' : product.description }}) }}
			        <span class="text-danger">{{ form_errors(form.price) }}</span>
			    </div>

			</fieldset>

				<div class="row">
					<div class="col-sm-offset-2 col-sm-10">
					    <p>
					        {{ form_widget(form.save, {'label' : 'Update product', 'attr': {'class': 'btn btn-success'}}) }}

					    </p>        
			                {{ form_end(form) }}
                	</div>
				</div>
			</div>
		</div>

	</div>
{% endblock %}

