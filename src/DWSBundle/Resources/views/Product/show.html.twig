{% extends 'DWSBundle::layout.html.twig' %}

{% block body %}
    {{ parent() }}
	<div class="container">
		<div class="col-md-12">
			<div class="page-header margin-none">
				<h2 class="padding-none">Product {{product.name}} (id: {{product.id}})</h2>
			</div>
			<div class="table-responsive">
				<table class="table table-striped table-hover">
					<thead>
						<tr>
							<th>Id</th>
                            <th>Name</th>
                            <th>Category</th>
                            <th>Price</th>
                            <th>Description</th>
						</tr>
					</thead>
					<tbody>

                            <tr>
								<td> {{ product.id }} </td> 
	                            <td> {{ product.name }} </td> 
	                            <td> {{ product.category.name }} </td> 
	                            <td> {{ product.price }} </td> 
	                            <td> {{ product.description }} </td> 
                                <td class="actions">
                                	{#
			                        <a href="{{ path('pro_list', {'id': product.id}) }}" class="btn btn-sm btn-info">
			                            list all
			                        </a>
			                        
			                        <a href="{{ path('pro_edit', {'id': product.id}, {'product': product, 'action': null}) }}" class="btn btn-sm btn-primary">
			                            edit
			                        </a>
			                        #}
			                        <a href="{{ path('pro_delete', {'id': product.id}) }}" class="btn btn-sm btn-danger btn-delete">
			                            delete
			                        </a>
				                </td>
                            </tr>                        
					</tbody>
				</table>
			</div>
		</div>
		<div class="row">
			<div class="text-center"> 
					<a href="{{ path('pro_list') }}"><button class="btn btn-primary btn-lg">List all</button></a>
			</div>
		</div>
	</div>
{% endblock %}