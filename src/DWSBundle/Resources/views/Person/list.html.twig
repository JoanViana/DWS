{% extends 'DWSBundle::layout.html.twig' %}

{% block body %}
    {{ parent() }}
    {% if text is defined %}
	    <div class="alert alert-success alert-dismissible" role="alert">
	  		<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	  		<strong>Sucess!</strong> {{ text }}
		</div>    	
	{% endif %}
	<div class="container">
		<div class="col-md-12">
			<div class="page-header margin-none">
				<h2 class="padding-none">Persons</h2>
			</div>
			<div class="table-responsive">
				<table class="table table-striped table-hover">
					<thead>
						<tr>
							<th>Id</th>
                            <th>Name</th>
                            {# <th>Age</th> #}
                            <th>Birthdate</th>
                            {# <th>Height</th> #}
                            <th>Email</th>
                            <th>Phone</th>
                            {#
                            <th>Gender</th>
                            <th>Descends</th>
                            <th>Vehicle</th>
                            <th>Language</th>
                            <th>English</th>
                            <th>Website</th>
                            <th>Card</th>
                            <th>IBAN</th>
                            #}
						</tr>
					</thead>
					<tbody>
						{% for person in persons %}
                            <tr>
								<td> {{ person.id }} </td> 
	                            <td> {{ person.name }} </td> 
	                            {# <td> {{ person.age }} </td> #}
	                            <td> {{ person.birthDate|date('d-m-Y') }} </td> 
	                            {# <td> {{ person.height }} </td> #}
	                            <td> {{ person.email }} </td> 
	                            <td> {{ person.phone }} </td> 
	                            {#
	                            <td> {{ person.gender }} </td> 
	                            <td> {{ person.descends }} </td>
	                            <td>
                                    {% if person.vehicle %}
                                    	Yes
                                    {% else %}
                                        No
                                    {% endif %}
                                </td> 
	                            <td> {{ person.preferredLanguage }} </td> 
                                <td> {% swich person.englishLevel %}
                                    	{% case 1 %}
                                        	A1
                                        {% case 2 %}
                                        	A2
                                        {% case 3 %}
                                        	B1
                                        {% case 4 %}
                                        	B2
                                        {% case 5 %}
                                        	C1
                                        {% case 6 %}
                                        	C2
                                        {% default %}
                                        	None
									 {% endswitch %}
                                </td> 
	                            <td> {{ person.personalWebsite }} </td> 
	                            <td> {{ person.cardNumber }} </td> 
	                            <td> {{ person.IBAN }} </td> 
	                            #}
                                <td class="actions">			
			                        <a href="{{ path('per_show', {'id': person.id}) }}" class="btn btn-sm btn-info">
			                            details
			                        </a>
			                        {#
			                        <a href="{{ path('per_edit', {'id': person.id}, {'person': person, 'action': null}) }}" class="btn btn-sm btn-primary">
			                            edit
			                        </a>
			                        #}
			                        <a href="{{ path('per_delete', {'id': person.id}) }}" class="btn btn-sm btn-danger btn-delete">
			                            delete
			                        </a>
				                </td>
                            </tr>
                         {% endfor %}
					</tbody>
				</table>
			</div>
		</div>
		<div class="row">
			<div class="text-center"> 
					<a href="{{ path('per_create_def') }}"><button class="btn btn-primary btn-lg">Create default</button></a>
			</div>
		</div>
	</div>
{% endblock %}